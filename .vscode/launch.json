{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug from Chrome",
            "url": "http://localhost:3000",
            "sourceMaps": true,
            "webRoot": "${workspaceFolder:sidemark-front}"
        },
        {
            "name": "Launch from Chrome",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceRoot}/dist/index.html"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug from NodeJS",
            "program": "${workspaceRoot}/src/app",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "chrome",
            "name": "Attach on Chrome",
            "request": "attach",
            "port": 9222
        }
    ],
    "compounds": [
        {
            "name": "Debug Sidemark Frontend",
            "configurations": [
                "Debug from Chrome"
            ]
        }
    ]
}
